<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "WineCellar.SEP4.resource.Order" table = "orders">

        <meta attribute = "class-description">
            This class contains the order detail.
        </meta>

        <id name = "order_id" type = "int" column = "order_id">
            <generator class="native"/>
        </id>

        <property name = "adress" column = "adress" type = "string"/>
        <property name = "invoiceadress" column = "invoiceadress" type = "string"/>
        <property name = "totalprice" column = "totalprice" type = "float"/>
        <property name = "totalitems" column = "totalitems" type = "int"/>
        <property name = "phone" column = "phone" type = "int"/>
        <property name = "delivered" column = "delivered" type = "boolean"/>

    </class>
</hibernate-mapping>