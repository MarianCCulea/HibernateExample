<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "WineCellar.SEP4.resource.Item" table = "item">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "item_id" type = "int" column = "item_id">
            <generator class="native"/>
        </id>

        <property name = "name" column = "name" type = "string"/>
        <property name = "category" column = "category" type = "string"/>
        <property name = "price" column = "price" type = "float"/>
        <property name = "description" column = "description" type = "string"/>
        <property name = "url" column = "url" type = "string"/>
        <property name = "quantity" column = "quantity" type = "int"/>
        <property name = "quantitytype" column = "quantitytype" type = "string"/>
        <property name = "nrofitems" column = "nrofitems" type = "int"/>

    </class>
</hibernate-mapping>